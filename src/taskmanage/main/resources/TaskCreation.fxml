<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="taskmanage.controller.TaskCreationController" spacing="10" padding="10">
    <children>
        <Label text="Name:"/>
        <TextField fx:id="nameField"/>

        <Label text="Description:"/>
        <TextArea fx:id="descriptionArea"/>

        <Label text="Due Date (YYYY-MM-DD):"/>
        <TextField fx:id="dueDateField"/>

        <Label text="Priority:"/>
        <ComboBox fx:id="priorityComboBox"/>

        <Label text="Tags (comma-separated):"/>
        <TextField fx:id="tagsField"/>

        <HBox spacing="10">
            <children>
                <Button text="Create Task" onAction="#handleCreateTask"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </children>
        </HBox>
    </children>
</VBox>
