<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="taskmanage.controller.TaskViewController">
    <children>
        <Label text="Name:"/>
        <Label fx:id="nameLabel"/>

        <Label text="Description:"/>
        <TextArea fx:id="descriptionArea" editable="false"/>

        <Label text="Due Date:"/>
        <Label fx:id="dueDateLabel"/>

        <Label text="Priority:"/>
        <Label fx:id="priorityLabel"/>

        <Label text="Status:"/>
        <Label fx:id="statusLabel"/>

        <Label text="Tags:"/>
        <Label fx:id="tagsLabel"/>

        <HBox spacing="10">
            <children>
                <Button text="Edit" onAction="#handleEdit"/>
                <Button text="Delete" onAction="#handleDelete"/>
            </children>
        </HBox>
    </children>
</VBox>
