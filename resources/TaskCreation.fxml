<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="750.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="taskmanage.controller.impl.TaskCreationController">
    <children>
        <HBox>
            <children>
                <!-- Empty Space -->
                <Pane style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />

                <!-- Main Content -->
                <VBox alignment="CENTER" prefHeight="750.0" prefWidth="576.0" spacing="10" style="-fx-padding: 10;">
                    <!-- Task Creation Header -->
                    <Label style="-fx-font-size: 20px;" text="Create Task" />

                    <!-- Task Name -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Task Name:" />
                        <TextField fx:id="taskNameField" promptText="Enter task name" />
                    </HBox>

                    <!-- Task Description -->
                    <HBox alignment="CENTER" spacing="10">
                        <VBox alignment="CENTER_LEFT">
                            <Label text="Description:" />
                            <Label text="(optional)" />
                        </VBox>
                        <TextArea fx:id="taskDescriptionField" promptText="Enter task description" prefHeight="100.0" />
                    </HBox>

                    <!-- Task Priority -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Priority:" />
                        <ComboBox fx:id="priorityComboBox" />
                    </HBox>

                    <!-- Task Due Date -->
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Due Date:" />
                        <DatePicker fx:id="dueDatePicker" />
                    </HBox>

                    <!-- Additional Optional Details -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Additional Optional Details" style="-fx-font-size: 16px;" />

                        <!-- Subtasks -->
                        <GridPane alignment="CENTER" hgap="10" vgap="10">
                            <Label text="Subtasks:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="subtask1Field" promptText="Subtask 1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <TextField fx:id="subtask2Field" promptText="Subtask 2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            <TextField fx:id="subtask3Field" promptText="Subtask 3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </GridPane>

                        <!-- Task Category/Flag -->
                        <HBox alignment="CENTER" spacing="10">
                            <Label text="Task Category/Flag:" />
                            <TextField fx:id="taskCategoryField" promptText="Enter category or flag" />
                        </HBox>

                        <!-- Reminders -->
                        <HBox alignment="CENTER" spacing="10">
                            <Label text="Reminders:" />
                            <TextField fx:id="reminderField" promptText="Enter reminders" />
                        </HBox>
                    </VBox>

                    <!-- Task Management Buttons -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button onAction="#handleSaveTask" text="Create Task" />
                        <Button onAction="#handleCancel" text="Cancel" />
                    </HBox>
                </VBox>

                <!-- Right Toolbar -->
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                    <Button fx:id="homeDashboardButton" onAction="#handleHomeDashboard" text="Home Dashboard" />
                    <Button fx:id="taskViewButton" onAction="#handleTaskView" text="Task View" />
                    <Button fx:id="calendarViewButton" onAction="#handleCalendarView" text="Calendar View" />
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>

