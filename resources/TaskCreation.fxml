<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="taskmanage.controller.impl.TaskCreationController">
    <children>
        <HBox>
            <children>
                <!-- Main Content -->
                <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                    <Label text="Create New Task" style="-fx-font-size: 20px;" />

                    <!-- Task Name -->
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Task Name" />
                        <TextField fx:id="taskNameField" promptText="Enter task name" />
                    </HBox>

                    <!-- Task Description -->
                    <HBox spacing="10" alignment="CENTER">
                        <Label text="Description" />
                        <TextArea fx:id="taskDescriptionField" promptText="Enter task description" />
                    </HBox>

                    <!-- Task Details -->
                    <GridPane alignment="CENTER" hgap="10" vgap="10">
                        <Label text="Start Date" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="startDateField" promptText="MM/DD/YYYY" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="End Date" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="endDateField" promptText="MM/DD/YYYY" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Priority" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="priorityField" promptText="High, Medium, Low" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>

                    <!-- Buttons -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Create Task" fx:id="createTaskButton" />
                        <Button text="Cancel" fx:id="cancelButton" />
                    </HBox>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
