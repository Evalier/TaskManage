<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="750.0" prefWidth="750.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="taskmanage.controller.impl.CalendarViewController">
    <children>
        <HBox>
            <children>
                <!-- Empty Space -->
                <Pane style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />

                <!-- Main Content -->
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                    <!-- Top Navigation Controls -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="btnPreviousMonth" onAction="#handlePreviousMonth" text="Previous Month" />
                        <Label fx:id="lblMonthYear" style="-fx-font-size: 20px;" text="Month Year" />
                        <Button fx:id="btnNextMonth" onAction="#handleNextMonth" text="Next Month" />
                    </HBox>

                    <!-- Month View -->
                    <GridPane fx:id="monthView" alignment="CENTER" hgap="5" vgap="5">
                        <!-- Day Names Header -->
                        <Label text="Sunday" GridPane.columnIndex="0" />
                        <Label text="Monday" GridPane.columnIndex="1" />
                        <Label text="Tuesday" GridPane.columnIndex="2" />
                        <Label text="Wednesday" GridPane.columnIndex="3" />
                        <Label text="Thursday" GridPane.columnIndex="4" />
                        <Label text="Friday" GridPane.columnIndex="5" />
                        <Label text="Saturday" GridPane.columnIndex="6" />

                        <!-- Days of the Month (These will be populated dynamically by the controller) -->
                        <Pane fx:id="day1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Pane fx:id="day2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                        <!-- Add more panes for each day -->
                    </GridPane>

                    <!-- Current View Mode Label -->
                    <Label fx:id="lblCurrentViewMode" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="All Months View" />

                    <!-- Task Table View -->
                    <TableView fx:id="taskTable">
                        <columns>
                            <TableColumn fx:id="nameColumn" text="Name" />
                            <TableColumn fx:id="dueDateColumn" text="Due Date" />
                            <TableColumn fx:id="priorityColumn" text="Priority" />
                            <TableColumn fx:id="statusColumn" text="Status" />
                            <TableColumn fx:id="tagsColumn" text="Tags" />
                        </columns>
                    </TableView>

                    <!-- All Months View -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="btnShowAllMonths" text="Show All Months" />
                        <Button fx:id="btnSpecificMonthView" text="Specific Month View" />
                    </HBox>

                    <!-- Task Details and Editing Section -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label style="-fx-font-size: 16px;" text="Selected Day Details" />
                        <TextArea fx:id="txtDayDetails" promptText="Details about the selected day..." />
                        <HBox alignment="CENTER" spacing="10">
                            <Button fx:id="btnEditTask" onAction="#handleEditTask" text="Edit Task" />
                            <Button fx:id="btnDeleteTask" onAction="#handleDeleteTask" text="Delete Task" />
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Toolbar -->
                <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                    <children>
                        <Button text="Home Dashboard" onAction="#handleHomeDashboard" fx:id="homeDashboardButton"/>
                        <Button text="Task Creation" onAction="#handleTaskCreation" fx:id="taskCreationButton"/>
                        <Button text="Task View" onAction="#handleTaskView" fx:id="taskViewButton"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>

