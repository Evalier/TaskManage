<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="750.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="taskmanage.controller.impl.HomeDashboardController">
    <children>
        <HBox>
            <children>
                <!-- Left Toolbar -->
                <VBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                    <children>
                        <Button fx:id="calendarButton" onAction="#handleCalendar" text="Calendar" />
                        <Button fx:id="taskCreationButton" onAction="#handleTaskCreation" text="Task Creation" />
                        <Button fx:id="taskViewButton" onAction="#handleTaskView" text="Task View" />
                    </children>
                </VBox>

                <!-- Main Content -->
                <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                    <items>
                        <!-- Task Summary -->
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Task Summary" />
                                <Label fx:id="completedTasksLabel" text="Completed Tasks: " />
                                <Label fx:id="ongoingTasksLabel" text="Ongoing Tasks: " />
                                <Label fx:id="overdueTasksLabel" text="Overdue Tasks: " />
                                <Label fx:id="summaryLabel" />

                                <!-- Task Table View -->
                                <TableView fx:id="taskTable">
                                    <columns>
                                        <TableColumn fx:id="nameColumn" text="Name" />
                                        <TableColumn fx:id="descriptionColumn" text="Description" />
                                        <TableColumn fx:id="dueDateColumn" text="Due Date" />
                                        <TableColumn fx:id="priorityColumn" text="Priority" />
                                        <TableColumn fx:id="statusColumn" text="Status" />
                                        <TableColumn fx:id="tagsColumn" text="Tags" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                        <!-- Statistical Graphics -->
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <children>
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Statistical Graphics" />
                                <BarChart fx:id="taskBarChart">
                                    <xAxis>
                                        <CategoryAxis label="Task Status" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Number of Tasks" />
                                    </yAxis>
                                </BarChart>
                                <TextArea fx:id="analysisTextArea" editable="false" prefHeight="328.0" prefWidth="500.0" promptText="Graph Analysis and Tips" wrapText="true" />
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </HBox>
    </children>
</VBox>
