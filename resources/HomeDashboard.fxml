<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="taskmanage.controller.impl.HomeDashboardController">
    <children>
        <HBox>
            <children>
                <!-- Left Toolbar -->
                <VBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                    <children>
                        <Button text="Calendar" onAction="#handleCalendar"/>
                        <Button text="Task Creation" onAction="#handleTaskCreation"/>
                        <Button text="Task View" onAction="#handleTaskView"/>
                    </children>
                </VBox>

                <!-- Main Content -->
                <SplitPane orientation="VERTICAL">
                    <items>
                        <!-- Task Summary -->
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <children>
                                <Label text="Task Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                <Label text="Completed Tasks: " fx:id="completedTasksLabel"/>
                                <Label text="Ongoing Tasks: " fx:id="ongoingTasksLabel"/>
                                <Label text="Overdue Tasks: " fx:id="overdueTasksLabel"/>
                            </children>
                        </VBox>

                        <!-- Statistical Graphics -->
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <children>
                                <Label text="Statistical Graphics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                                <BarChart fx:id="taskBarChart">
                                    <xAxis>
                                        <CategoryAxis label="Task Status"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Number of Tasks"/>
                                    </yAxis>
                                </BarChart>
                                <TextArea fx:id="analysisTextArea" wrapText="true" editable="false" promptText="Graph Analysis and Tips"/>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </HBox>
    </children>
</VBox>

